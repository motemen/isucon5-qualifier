[Unit]
Description=isuxi-perl
After=syslog.target

[Service]
WorkingDirectory=/home/isucon/deploy/perl
EnvironmentFile=/home/isucon/env.sh
Environment=PLACK_ENV=production

ExecStart=/home/isucon/.local/perl/bin/carton exec -- start_server --path /tmp/isucon.sock -- plackup -s Starlet --workers 7 --max-reqs-per-child=10000 --min-reqs-per-child=10000 --disable-keepalive app.psgi

[Install]
WantedBy=multi-user.target
