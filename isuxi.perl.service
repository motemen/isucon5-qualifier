[Unit]
Description=isuxi-perl
After=syslog.target

[Service]
WorkingDirectory=/home/isucon/deploy/perl
EnvironmentFile=/home/isucon/env.sh
Environment=PLACK_ENV=production

ExecStart=/home/isucon/.local/perl/bin/carton exec -- plackup -s Starlet --socket /home/isucon/isucon.sock --workers 10 --disable-keepalive app.psgi

[Install]
WantedBy=multi-user.target
